<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head.ejs') %> 
    <link rel="stylesheet" href="/css/view-contacts.css">
    <title>Search Results</title>
</head>
<body>
    <h1>Search Results for: <% (new URL(document.location)).searchParams.get("q"); %> </h1>
    <a href="/">Go back to the Homepage</a>
    <% contacts.forEach(element => { %>
        <div class="contact-container">
            <h2>Name: <%= element.name %></h2>
            <p>Phone Number: <a href="tel:<%= element.phonenumber %>"><%= element.phonenumber %></a></p>
            <p>Email: <a href="mailto:<%= element.email %>"><%= element.email %></a></p>
            <p>Address: <%= element.address %></p>
            <p>birthday: <%= element.birthday %></p>
            <a href="/contacts/<%= element._id %>/edit">Edit</a>
            <button onclick="deleteContact('<%= element._id %>')">Delete</button>
        </div>
    <% }); %>
    <%- include('partials/footer.ejs') %>
    <script src="/js/view-contacts.js"></script>
</body>
</html>