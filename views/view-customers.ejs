<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>
    <link rel="stylesheet" href="/css/view-customers.css">
    <title>View Customers</title>
</head>
<body>
    <% customers.forEach((item, index) => { %>
        <div class="customer">
            <h2><%= item.name %></h2>
            <p><%= item.username %></p>
            <p><%= item.address %></p>
            <ul>
                <% item.accounts.forEach((accItem, index) => { %>
                    <li><%= accItem %></li>
                <% }) %>
            </ul>
            <p><%= item.email %></p>
            <p><%= item.birthdate %></p>
        </div>
    <% }) %>
</body>
</html>